<div class="container wal">
  <div class="account">
    <h2 class="support-label">support</h2>
    <div class="account-tab">
      <ul>
        <li class="active"><a href="email.html">Contact Support </a></li>
        <div class="clear"></div>
      </ul>
      <div class="wel-form account-form">
        <%= simple_form_for @message, :url => contact_path, :html => {:class => 'form-horizontal'}  do |f| %>
          <div class="pad">
            <div class="row">
              <div class="col-md-12">
                <% if !current_user %>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-3">
                        <label class="control-label">* Name</label>
                      </div>
                      <div class="col-md-8">
                        <%= f.text_field :name, class: "form-control"%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-3">
                        <label class="control-label">* Email</label>
                      </div>
                      <div class="col-md-8">
                        <%= f.text_field :email, class: "form-control"%>
                      </div>
                    </div>
                  </div>
                <%else%>
                  <% @message.email = current_user.email; @message.name = current_user.name %>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-3">
                        <label class="control-label">* Name</label>
                      </div>
                      <div class="col-md-8">
                        <%= f.text_field :name, class: "form-control",as: :hidden%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-3">
                        <label class="control-label">* Email</label>
                      </div>
                      <div class="col-md-8">
                        <%= f.text_field :email,class: "form-control",as: :hidden%>
                      </div>
                    </div>
                  </div>
                <%end%>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-3">
                      <label class="control-label">* Subject</label>
                    </div>
                    <div class="col-md-8">
                      <%= f.text_field :subject,class: "form-control"%>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-3">
                      <label class="control-label" >* Body</label>
                    </div>
                    <div class="col-md-8">
                      <%= f.text_area :body,class: "form-control hf", row: 5%>
                      <p class="pg">For phone support call: (925) 289-8746</p>
                      <div class="bun2">
                        <%= tb_submit_button(title: "Send",class: "sdkjfhk")%>
                        <div class="clear"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>