<div id="content" class="content upload">
  <div class="container wal">
    <div class="welcome">
      <div class="hel">
        <h2 class="left-1">Upload Photos </h2>
        <h2 class="right-1">2 of 5</h2>
        <div class="clear"></div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <%= render "appraisals/build/appraisals_tab"%>
          <div class="wel-form">
            <%= simple_form_for@appraisal, :url => wizard_path, :method => :put,  :html => {:multipart => true, :class => "form-horizontal"},
              wrapper: :horizontal_form,
              wrapper_mappings: {
                check_boxes: :horizontal_radio_and_checkboxes,
                radio_buttons: :horizontal_radio_and_checkboxes,
                file: :horizontal_file_input,
                boolean: :horizontal_boolean
              } do |f| %>
              <div class="pad">
                <%= f.simple_fields_for :appraisal_info, @appraisal.appraisal_info do |a| %>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="row">
                          <div class="col-md-12">
                            
                              <div class="row">
                               <!--  <div class="col-md-2">
                                  <label class="control-label" for="signature">Signatures,  
                                  Maker/Maker's, Dates, Etc.</label>
                                </div> -->
                                <div class="col-md-12">
                                  <%= a.input :makers_marks, :label => "Signatures, maker's marks, dates", :as => :text, :input_html => {:rows => 4}, hint: "(List any signatures, maker's marks or dates. If none, enter 'none'.)" %>
                                </div>
                          </div>
                        </div>
                        <div class="col-md-12">
                            
                              <div class="row">
                                <div class="col-md-12">
                                  <%= a.input :inscriptions, :label => "Inscriptions, etc.", hint: "(List any inscriptions, monograms, dedications or other such markings. If none, enter 'none'.)" %>
                                </div>
                              </div>  
                        </div>
                        <div class="col-md-12">
                          <%= a.input :dimensions, :label => "Dimensions",required: true, hint: "(Enter the height, width, depth, diameter as appropriate.)" %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                          <div class="">
                            <%= a.input :materials, :label => "Materials", :as => :text, :input_html => {:rows => 4}, hint: "What is it made out of?" %>
                          </div>
                    </div>
                    <div class="row">
                          <div class="">
                            <%= a.input :damage, :label => "Condition", required: true, :as => :text, :input_html => {:rows => 4}, hint: "(List any damages, old repairs, soiling, staining or other defects. If the item is mechanical or electrical, is it in good working condition?)" %>
                          </div>
                    </div>  
                  </div>
                <% end %>
                <%= render  :partial => "photos/new_multiple_image_upload_form", locals: {photos: @photos} %>

              </div>
              <div class="bun">
                <%= link_to "Back", previous_wizard_path, class: "btn next-1 gre left-2 tp" %>
                <%= link_to "Forward", next_wizard_path, class: "btn next-1 gre right-2 tp", id: "btnBuildWizardPhoto" %>
                <div class="clear"></div>
              </div>
            <% end %>  
          </div>
        </div>
        <div class="col-md-3">
          <div class="inform">
            <div class="paypal">
              <%= image_tag "/assets/new_template/paypal.png"%>
            </div>
            <h6 class="trans"><font color="#e76311" >If you have to go, let's save your work for Your return !</font> </h6>
            <div class="har">
              <%= link_to "Save", appraisals_path, id: "save_it_btn", class: "btn next-1 gre"%>
            </div>
            <div class="expert">
              <p>An Expert Appraisal 
                is only moments
                away. don't stop now!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
