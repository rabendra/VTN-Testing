<div class="container">
  <div class="login">
    <h2>Login</h2>
    <div class="my-login">
      <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' },
        wrapper: :horizontal_form,
        wrapper_mappings: {
          check_boxes: :horizontal_radio_and_checkboxes,
          radio_buttons: :horizontal_radio_and_checkboxes,
          file: :horizontal_file_input,
          boolean: :horizontal_boolean
        } do |f| %>
        <div class="row">
          <div class="col-md-5">
            <div class="sidn">
              <div class="form-group">
                <label class="control-label" >Email<font color="#ff5a00">*</font></label>
                <%= f.text_field :email,class: "form-control" %>
              </div>
              <div class="form-group">
                <label class="control-label" >Password<font color="#ff5a00">*</font></label>
                <%= f.password_field :password,class: "form-control" %>
              </div>
              <div class="text-right">
                <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <%= f.submit "Login",class: "btn log-gre"%>
              </div>
            </div>
          </div>
          <div class="col-md-7">
            <div class="social">
              <%= link_to customer_omniauth_authorize_path(:facebook), class: "my-so my-face" do %>
                <div class="fb-pad">
                  <span><i class="fa fa-facebook"></i></span> 
                </div>
                Sign In with Facebook
              <% end %>
            </div>
            <div class="social">
               <%= link_to customer_omniauth_authorize_path(:twitter),class: "my-so my-twi" do %>
                  <div class="twi-pad">
                    <span><i class="fa fa-twitter"></i></span> 
                  </div>
                  Sign In with Twitter
               <%end%>
            </div>
            <div class="social">
              <%= link_to customer_omniauth_authorize_path(:linkedin), class: "my-so my-link" do %>
                <div class="link-pad">
                  <span><i class="fa fa-linkedin"></i></span> 
                </div>
                Sign In with Linkedin
              <%end%>
            </div>
          </div>
        </div>
        <%end%>
      <div class="login-nav">
        <ul>
          <li><%= link_to "Create a new account",new_registration_path(:customer)%></li>
          <li><%= link_to "Become an Appraiser",new_registration_path(:appraiser)%></li>
          <li><%= link_to "Forgot your password?",new_password_path(:user)%></li>
          <li><%= link_to "Didn't receive confirmation instructions?",new_confirmation_path(:user)%></li>
        </ul>
      </div>
    </div>
  </div>
</div>